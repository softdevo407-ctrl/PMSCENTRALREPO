# PMSApp Docker Environment Variables
# Copy this file to .env.production and update values for production deployment

# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=bms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# ============================================
# Backend Configuration
# ============================================
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/bms
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# ============================================
# JPA/Hibernate Configuration
# ============================================
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false

# ============================================
# Security & JWT
# ============================================
# IMPORTANT: Change this in production!
# Generate a strong 256+ bit secret key
JWT_SECRET=your-secret-key-change-this-in-production-with-a-long-random-string-atleast-256-bits
JWT_EXPIRATION=86400000

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=7080
SERVER_SERVLET_CONTEXT_PATH=/api

# ============================================
# CORS Configuration
# ============================================
# Update for production domains
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://frontend:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# ============================================
# Frontend Configuration
# ============================================
REACT_APP_API_URL=http://localhost:7080/api

# ============================================
# Java Configuration
# ============================================
JAVA_OPTS=-Xmx512m -Xms256m

# ============================================
# Logging Configuration
# ============================================
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_PMS=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG

# ============================================
# Container Restart Policy
# ============================================
# Options: no, always, unless-stopped, on-failure
RESTART_POLICY=unless-stopped
